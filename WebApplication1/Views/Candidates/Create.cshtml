@model CandidateVM
@{
    ViewData["Title"] = "Create";
}

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="row">
        <div class="col-6">
            <h2>Candidate Info</h2>
            <div asp-validation-summary="ModelOnly"></div>
            <div class="row mb-2">
                <label asp-for="CandidateName" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="CandidateName" class="form-control" />
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="DateOfBirth" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="DateOfBirth" class="form-control" type="date"/>
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="Phone" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="Phone" class="form-control" />
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="ImageFile" class="col-form-label col-3"></label>
                <div class="col-7">
                    <input asp-for="ImageFile" class="form-control" />
                </div>
            </div>
            <div class="row mb-2">
                <label asp-for="Fresher" class="col-form-label col-3"></label>
                <div class="col-7">
                    @Html.CheckBoxFor(x=>x.Fresher)
                </div>
            </div>
        </div>
        <div class="col-6">
            <h2>Skill</h2>
            <a id="btnPlus" class="btn btn-primary mb-2">Add</a>
            <div id="container">
                <script>
                    LoadData()
                </script>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>

